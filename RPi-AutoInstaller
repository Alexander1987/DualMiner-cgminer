#!/bin/bash
echo  \
tput setaf 6; echo Updating and Installing Dependencies
echo  \
sudo apt-get update
sudo apt-get install libudev-dev libcurl4-openssl-dev
echo  \
echo  \
tput setaf 6; echo Configuring And Installing Cgminer
echo  \
cd cgminer
./autogen.sh
./configure --enable-dualminer --enable-scrypt --disable-opencl  --prefix=/home/pi/DualMiner-cgminer/cgminer
make && make install

tput setaf 6; echo Done!
